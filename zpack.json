{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.0.1/resources/zpack-schema.json",
  "name": "overline-zebar",
  "version": "0.0.0",
  "description": "Fully featured topbar using React+Vite, Tailwind & Framer Motion. ",
  "tags": [],
  "previewImages": [
    "resources/preview-image-1.png"
  ],
  "repositoryUrl": "https://github.com/mushfikurr/overline-zebar",
  "widgets": [
    {
      "name": "main",
      "htmlPath": "./widgets/main/dist/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": [
        "widgets/main/dist/index.html",
        "widgets/main/dist/assets/**",
        "widgets/main/dist/config.json",
        "widgets/main/dist/geistMono/**",
        "widgets/main/README.md"
      ],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_left",
          "offsetX": "0px",
          "offsetY": "4px",
          "width": "100%",
          "height": "36px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": false,
            "edge": null,
            "windowMargin": "0px"
          }
        }
      ]
    },
    {
      "name": "system-stats",
      "htmlPath": "./widgets/system-stats/dist/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": true,
      "resizable": false,
      "transparent": true,
      "includeFiles": [
        "widgets/system-stats/dist/index.html",
        "widgets/system-stats/dist/assets/**",
        "widgets/system-stats/dist/config.json",
        "widgets/system-stats/dist/geistMono/**",
        "widgets/system-stats/README.md"
      ],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_left",
          "offsetX": "0px",
          "offsetY": "4px",
          "width": "400px",
          "height": "400px",
          "monitorSelection": {
            "type": "all"
          },
          "dockToEdge": {
            "enabled": false,
            "edge": null,
            "windowMargin": "0px"
          }
        }
      ]
    }

  ]
}
